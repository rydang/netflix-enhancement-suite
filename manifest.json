{
  "name": "Netflix Enhancement Suite",
  "version": "0.1",
  "manifest_version": 2,  
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/watch/*"
      ],
      "js": ["initial.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}